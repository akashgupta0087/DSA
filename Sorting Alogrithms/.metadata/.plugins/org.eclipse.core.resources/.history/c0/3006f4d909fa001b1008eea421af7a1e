package sorting.mergesort;

public class MergeSort {
	
	public int[] sort(int start, int end, int[] arr) {
		if(start < end) {
			int mid = (start + end) / 2;
			arr = getArr(start, mid, arr);
			int[] leftSorted = sort(start, mid, arr);
			
			int[] rightArr = getArr(mid+1, end, arr);
			arr = sort(mid+1, end, rightArr);
			arr = merge(leftSorted, arr);
		}
		return arr;
	}
	
	private int[] merge(int[] leftArr, int[] rightArr) {
		int n = leftArr.length + rightArr.length;
		int[] resultArr = new int[n];
		return resultArr;
	}
	
	private int[] getArr(int start, int end, int[] arr) {
		int n = (end-start) + 1;
		int[] newArr = new int[n];
		for(int i = 0; i < n; i++) {
			newArr[i] = arr[i];
		}
		return newArr;
		
	}
	
}
